{% block body %}
    <main class="form-signin text-center d-flex justify-content-center align-items-center">
        <div class="w-100">
            <form method="post">
                <img class="mb-4" src="{{ asset('build/images/logo-black.svg') }}" alt="" >
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 fw-normal">Авторизация</h1>
                <div class="form-floating mb-4">
                    <input type="email" value="{{ last_username }}" class="form-control" name="email" id="inputEmail" placeholder="name@example.com" required autofocus>
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password" autocomplete="current-password" required>
                    <label for="floatingPassword">Password</label>
                </div>
                {#        <label for="inputEmail">Email</label>#}
                {#        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>#}
                {#        <label for="inputPassword">Password</label>#}
                {#        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>#}

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="w-100 btn btn-lg btn-primary" type="submit">
                    Войти
                </button>
            </form>
        </div>
    </main>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
</html>