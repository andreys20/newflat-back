    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}NewFlat - большой портал недвижимости!{% endblock %}</title>
    <link rel="icon" href="{{ asset('build/images/favicon.svg') }}">
    {# Run composer require symfony/webpack-encore-bundle to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <script src="https://api-maps.yandex.ru/2.1/?apikey=9c89a3bb-1e7f-4595-bc37-97c1c6a00080&lang=ru_RU" type="text/javascript"></script>
