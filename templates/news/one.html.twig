{% extends 'base.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}
 {% block metaTag %}
     <meta name="description" content="{{ news.description|slice(0, 120) }}">
 {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('building') }}
{% endblock %}

{% block body %}
    <section class="section__catalog_page">
        <div class="main-page wrapper">
            <div class="container px-5">
                <div class="search-block row px-5">
                    <div class="col-12">
                        {% include '/filter/panel.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include '/main/reklama/reklama_block_1.html.twig' %}
    <div class="container mt-5 px-5">
        <nav style="--bs-breadcrumb-divider: '-';" aria-label="breadcrumb" class="mx-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_news_list') }}">Новости</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ news.title }}</li>
            </ol>
        </nav>
    </div>
    <section class="section__article">
        <div class="container p-3 px-5">
            <div class="mb-5 d-flex flex-wrap">
                <div class="bg-white w-100 p-4">
                    <div class="building-block-title pb-4 text-start">
                        <h1>{{ news.title }}</h1>
                        <span class="text-muted">{{ news.date }}</span>
                    </div>
                    <div class="d-flex justify-content-start">
                        <img class="img-fluid" src="{{ news.photo }}" alt="">
                    </div>
                    <div class="building-block-description" id="description">
                        <p class="text-start py-4">
                            {{ news.description|nl2br }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('building') }}
{% endblock %}
